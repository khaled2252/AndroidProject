<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notes_circle_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_notes_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:src="@drawable/icon" />

    <ImageView
        android:id="@+id/img_notes_show_notes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/show_notes" />

    <ImageView
        android:id="@+id/img_notes_add_new_one"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"

        android:src="@drawable/add_new_note" />

    <ImageView
        android:id="@+id/img_notes_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/close" />

</LinearLayout>